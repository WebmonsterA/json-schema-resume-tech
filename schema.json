{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cv.json",
  "type": "object",
  "definitions": {
    "iso8601": {
      "type": "string",
      "description": "e.g. 2014-06-29",
      "pattern": "^([1-2][0-9]{3}-[0-1][0-9]-[0-3][0-9]|[1-2][0-9]{3}-[0-1][0-9]|[1-2][0-9]{3})$"
    }
  },
  "properties": {
    "$schema": {
      "type": "string",
      "description": "link to the version of the schema that can validate the resume",
      "format": "uri"
    },
    "basics": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "name": {
          "type": "string"
        },
        "job": {
          "type": "string",
          "description": "e.g. Web Developer"
        },
        "phone": {
          "type": "string",
          "description": "Phone numbers are stored as strings so use any format you like, e.g. 0696000000"
        },
        "website": {
          "type": "string",
          "description": "URL (as per RFC 3986) to your website, e.g. personal homepage",
          "format": "uri"
        },
        "email": {
          "type": "string",
          "description": "e.g. joebello@mail.com",
          "format": "email"
        },
        "country": {
          "type": "string",
          "description": "Age is stored as strings so use this format, e.g. Martinique"
        },
        "city": {
          "type": "string",
          "description": "City is stored as strings so use this format, e.g. Pointe-Ã -Pitre"
        },
        "summary": {
          "type": "string",
          "description": "Write a short 2-3 sentence biography about yourself"
        }
      }
    },
    "profiles": {
      "type": "array",
      "additionalProperties": true,
      "properties": {
        "network": {
          "type": "string",
          "description": "e.g. Linkedin or Github"
        },
        "username": {
          "type": "string",
          "description": "e.g. joebello"
        },
        "url": {
          "type": "string",
          "description": "e.g. https://www.linkedin.com/in/joebello/",
          "format": "uri"
        }
      }
    },
    "areaOfIntervention": {
      "type": "array",
      "description": "List some intervention",
      "additionalItems": false,
      "items": {
        "type": "string",
        "description": "e.g. Software development"
      }
    },
    "lastExperiences": {
      "type": "array",
      "description": "List last experiences you have done",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "year": {
            "type": "number",
            "description": "e.g. 2023."
          },
          "duration": {
            "type": "string",
            "description": "e.g. 24 month."
          },
          "company": {
            "type": "string",
            "description": "e.g. Company name."
          },
          "job": {
            "type": "string",
            "description": "e.g. Job title."
          }
        }
      }
    },
    "skills": {
      "type": "array",
      "description": "List out your professional skill-set",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "programmingLanguages": {
            "type": "string",
            "description": "e.g. java, python, react"
          },
          "methods": {
            "type": "string",
            "description": "e.g. Scrum, Kanban, Design Pattern"
          },
          "database": {
            "type": "string",
            "description": "e.g. Oracle, SQL Server, MySQL"
          },
          "server": {
            "type": "string",
            "description": "e.g. IIS, Nginx, Apache"
          }
        }
      }
    },
    "education": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "entitled": {
            "type": "string",
            "description": "e.g. Miage Licence."
          },
          "duration": {
            "type": "string",
            "description": "e.g. 2 years."
          },
          "school": {
            "type": "string",
            "description": "e.g. Massachusetts Institute of Technology."
          }
        }
      }
    },
    "languagesLevel": {
      "type": "array",
      "description": "List any other languages you speak",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "language": {
            "type": "string",
            "description": "e.g. French, English, Spanish"
          },
          "skill": {
            "type": "string",
            "description": "e.g. Fluent, Beginner"
          }
        }
      }
    },
    "detailedExperiences": {
      "type": "array",
      "description": "Specify career projects",
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "company": {
            "type": "string",
            "description": "e.g. The World Wide Web"
          },
          "startDate": {
            "$ref": "#/definitions/iso8601"
          },
          "endDate": {
            "$ref": "#/definitions/iso8601"
          },
          "duration": {
            "type": "string",
            "description": "e.g. 10 month"
          },
          "job": {
            "type": "string",
            "description": "Name of the job. e.g. Front-end developer."
          },
          "context": {
            "type": "string",
            "description": "Description of the context."
          },
          "environment": {
            "type": "array",
            "description": "Specify technical environment",
            "additionalItems": false,
            "items": {
              "type": "string",
              "description": "e.g. AngularJS"
            }
          },
          "softSkills": {
            "type": "array",
            "description": "Specify technical environment",
            "additionalItems": false,
            "items": {
              "type": "string",
              "description": "e.g. AngularJS"
            }
          },
          "projects": {
            "type": "array",
            "description": "Specify career projects",
            "additionalItems": false,
            "items": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "name": {
                  "type": "string",
                  "description": "e.g. Customer management software"
                },
                "duration": {
                  "type": "string",
                  "description": "e.g. 12 month"
                },
                "skillsLearned": {
                  "type": "string",
                  "description": "List of acquired skills. e.g. Back-end"
                },
                "description": {
                  "type": "string",
                  "description": "Explain what you did"
                },
                "conception": {
                  "type": "array",
                  "description": "List your tasks on this project",
                  "additionalItems": false,
                  "items": {
                    "type": "string",
                    "description": "e.g. User needs analysis"
                  }
                },
                "achievement": {
                  "type": "array",
                  "description": "List of your achievements",
                  "additionalItems": false,
                  "items": {
                    "type": "string",
                    "description": "e.g. Choosing the technical environment"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
